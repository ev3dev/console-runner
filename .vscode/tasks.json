{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "make",
    "type": "shell",
    "args": ["-s", "-C", "build"],
    "tasks": [
        {
            "taskName": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "suppressTaskName": true,
            "problemMatcher": "$valac"
        },
        {
            "taskName": "edit_cache",
            "problemMatcher": []
        },
        {
            "taskName": "rebuild_cache",
            "problemMatcher": []
        },
        {
            "taskName": "clean",
            "problemMatcher": []
        }
    ]
}
